<h1>Edit Post</h1>
<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post"  enctype="multipart/form-data">
<div class="form-group">
    <label for="title">Title</label><br>
    <input id="title"  value="{{post.title}}" name="title" type="text" class="form-control">
    <br>
</div>

<div class="form-group">
    <label for="file">Upload File</label><br>
    <input id="title" name="file" type="file" class="form-control">
    <br>
</div>

<div class="form-group">
    <label for="status">Status</label><br>
    <select id="status" name="status" type="text" class="form-control">
    {{#Select post.status}}
        <option value="public">Public</option>
        <option value="private">Private</option>
        <option value="draft">Draft</option>
    {{/Select}}
    </select>
    <br>
</div>

<div class="form-group">
    <label for="category">Category</label><br>
    <select id="status" name="category" type="text" class="form-control">
     {{#Select post.category}}
        {{#each categories}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
     {{/Select}}
    </select>
    <br>
</div>

<div class="form-check">
    <label for="allowComments" class="form-check-label">
    <input id="allowComments" value="true" {{#if post.allowComments}} checked="checked" {{/if}} ="allowComments" type="checkbox" class="form-check-input" >
          Allow Comments
    </label>
    <br>
</div>

<div class="form-group">
    <label for="description">Description</label><br>
    <textarea id="descreption" cols="20" rows="10" name="description" class="form-control">{{post.description}}</textarea>
    <br>
</div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>