<h1>All Posts</h1>

<table class="table table-bordered">
<thead>
    <tr>
    <th>Id</th>
    <th>File</th>
    <th>Title</th>
    <th>Status</th>
    <th>Category</th>
    <th>Allow Comments</th>
    <th>Date</th>
    <th>View Post</th>
    </tr>
</thead>

<tbody>
    {{#each Posts}}
    <tr>
        <td>{{_id}}</td>
        <td><img height="50" src="/uploads/{{file}}" alt=""></td>
        <td>{{title}}</td>
        <td>{{status}}</td>
        <td>{{category.name}}</td>
        <td>{{allowComments}}</td>
        <td>{{generateDate date 'MMMM Do YYYY'}}</td>
        <td><a href="/post/{{id}}">View</a></td>
        
    </tr>
    {{/each}}
</tbody>

</table>